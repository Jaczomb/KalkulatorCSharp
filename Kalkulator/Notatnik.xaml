<Window x:Class="Kalkulator.Notatnik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d"
        Title="Notatnik" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnLiczWGore" Content="Odliczaj w górę" HorizontalAlignment="Left" Margin="23,44,0,0" VerticalAlignment="Top" Width="100" Click="btnLiczWGore_Click" />
        <Label x:Name="lblCzas" Content="0:00:00" HorizontalAlignment="Left" Margin="153,117,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnPokazCzas" Content="Pokaz Czas" HorizontalAlignment="Left" Margin="23,117,0,0" VerticalAlignment="Top" Width="100" Click="btnPokazCzas_Click"/>
        <Button x:Name="btnLiczWDol" Content="Odliczaj w dół" HorizontalAlignment="Left" Margin="23,82,0,0" VerticalAlignment="Top" Width="100" Click="btnLiczWDol_Click"/>
        <Label x:Name="lblLiczWGore" Content="0" HorizontalAlignment="Left" Margin="153,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.229,-0.464"/>
        <TextBox x:Name="txtLiczWDol" HorizontalAlignment="Left" Height="23" Margin="153,83,0,0" TextWrapping="Wrap" Text="300" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
